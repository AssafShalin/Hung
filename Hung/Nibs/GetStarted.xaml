<UserControl x:Class="HLL.Nibs.GetStarted"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="1136" d:DesignWidth="640">
    <Grid Visibility="Visible" Name="GetStartedGrid">
        <StackPanel Margin="30">
            <Image Source="{StaticResource AppIcon}" Width="340" ></Image>
            <Label Content="Hung" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" FontSize="72"/>
            <Label Content="Upload Negotiator" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0" FontSize="40" />
        </StackPanel>
        <Label Name="GetStartedButton" Content="Get Started" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30" FontSize="40" Foreground="{DynamicResource iBlue}" />
    </Grid>
</UserControl>
